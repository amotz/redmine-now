{
  "name": "RedmineNow",
  "version": "0.3.0",
  "repository": "emsk/redmine-now",
  "scripts": {
    "start": "electron ./app/main.js",
    "clean": "./bin/clean.sh",
    "postinstall": "install-app-deps",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "./bin/lint-js.sh",
    "lint:css": "./bin/lint-css.sh",
    "pack": "./bin/pack-all.sh",
    "pack:mac": "./bin/pack-mac.sh",
    "pack:win": "./bin/pack-win.sh",
    "test": "./bin/test.sh",
    "release": "npm run clean && npm install && npm run pack"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "electron": "1.4.15",
    "electron-builder": "~12.0.0",
    "eslint": "~3.14.0",
    "mocha": "^3.2.0",
    "spectron": "~3.4.1",
    "stylelint": "~7.7.1",
    "stylelint-config-standard": "~15.0.1"
  },
  "build": {
    "appId": "redmine-now",
    "category": "public.app-category.productivity",
    "files": ["**/*", "!**/npm-debug\\.log"],
    "copyright": "Copyright (c) 2016-2017 emsk",
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "backgroundColor": "#fff",
      "iconSize": 120,
      "contents": [
        { "x": 410, "y": 160, "type": "link", "path": "/Applications" },
        { "x": 140, "y": 160, "type": "file" }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
